# ============================================
# CONFIGURACIÓN DEL PROYECTO
# ============================================
PROJECT_NAME={{ project_name }}
PROJECT_TYPE={{ project_type }}
ENVIRONMENT={{ environment }}

# ============================================
# CONFIGURACIÓN DE ODOO
# ============================================
ODOO_VERSION={{ odoo_version }}
ODOO_PORT={{ odoo_port }}
ODOO_PASSWORD={{ odoo_password }}
ODOO_ADMIN_PASSWORD={{ odoo_admin_password }}

# ============================================
# CONFIGURACIÓN DE BASE DE DATOS
# ============================================
DB_HOST={{ db_host }}
DB_PORT={{ db_port }}
DB_NAME={{ db_name }}
DB_USER={{ db_user }}
DB_PASSWORD={{ db_password }}

# ============================================
# CONFIGURACIÓN DE REDIS
# ============================================
REDIS_HOST={{ redis_host }}
REDIS_PORT={{ redis_port }}
REDIS_PASSWORD={{ redis_password }}

# ============================================
# CONFIGURACIÓN DE PGADMIN (DESARROLLO)
# ============================================
PGADMIN_PORT={{ pgadmin_port }}
PGADMIN_EMAIL={{ pgadmin_email }}
PGADMIN_PASSWORD={{ pgadmin_password }}

# ============================================
# CONFIGURACIÓN DE LOGS
# ============================================
LOG_LEVEL={{ log_level }}
LOG_HANDLER={{ log_handler }}

# ============================================
# CONFIGURACIÓN DE DESARROLLO
# ============================================
# Activar modo debug
DEBUG_MODE={{ debug_mode }}

# Activar auto-reload de módulos
AUTO_RELOAD={{ auto_reload }}

# Configuración de workers
WORKERS={{ workers }}

# ============================================
# CONFIGURACIÓN DE CORREO (OPCIONAL)
# ============================================
{% if smtp_enabled %}
SMTP_SERVER={{ smtp_server }}
SMTP_PORT={{ smtp_port }}
SMTP_USER={{ smtp_user }}
SMTP_PASSWORD={{ smtp_password }}
SMTP_SSL={{ smtp_ssl }}
{% else %}
# SMTP_SERVER=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASSWORD=your-app-password
# SMTP_SSL=True
{% endif %}

# ============================================
# CONFIGURACIÓN DE BACKUP (OPCIONAL)
# ============================================
{% if backup_enabled %}
BACKUP_ENABLED={{ backup_enabled }}
BACKUP_SCHEDULE={{ backup_schedule }}
BACKUP_RETENTION_DAYS={{ backup_retention_days }}
{% else %}
# BACKUP_ENABLED=True
# BACKUP_SCHEDULE=0 2 * * *
# BACKUP_RETENTION_DAYS=30
{% endif %}

# ============================================
# CONFIGURACIÓN DE IMÁGENES DOCKER
# ============================================
# Imágenes de contenedores (con valores por defecto)
POSTGRES_IMAGE={{ postgres_image }}
REDIS_IMAGE={{ redis_image }}
ODOO_IMAGE={{ odoo_image }}
PGADMIN_IMAGE={{ pgadmin_image }}
